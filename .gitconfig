[user]
  name = Charlie Egan
  email = charlieegan3@users.noreply.github.com
[core]
  editor = vim
  excludesfile = ~/.gitignore_global
  filemode = false
[transfer]
  fsckobjects = true
[push]
  default = simple
[color]
  ui = auto
[color "status"]
  added = green
  changed = blue bold
  untracked = red bold
[commit]
  template = ~/.gitmessage
  gpgsign = true
[status]
  showUntrackedFiles = all
[stash]
  showPatch = true
[rebase]
  autostash = true
[log]
  decorate = full
[alias]
  s = status -sb
  c = diff --cached --word-diff=color
  lg = log --pretty=format:'%Cred%h%Creset %Cblue%an %Creset(%Cgreen%ar%Creset) \t%<(55,trunc)%s' --max-count=40
  cm = log -1 --pretty=%B
  prune = fetch --prune
  undo = reset --soft HEAD^
  stash-all = stash save --include-untracked
[credential]
	helper = cache --timeout=9999999999999
